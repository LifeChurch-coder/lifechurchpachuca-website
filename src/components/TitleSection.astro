---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="w-full flex justify-center items-center gap-3">
  <div class="flex-1 border-b border-primary border rounded-full min-w-[15%]">
  </div>
  <div class="flex justify-center items-center">
    <h3
      class="font-normal text-center text-2xl sm:text-4xl md:text-5xl lg:text-5xl xl:text-6xl"
    >
      {title}
    </h3>
  </div>
  <div class="flex-1 border-b border-primary border rounded-full min-w-[15%]">
  </div>
</div>
